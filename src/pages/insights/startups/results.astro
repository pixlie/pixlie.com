const metadata = {
  title: 'Custom Startup Insights',
};
---

<Layout metadata={metadata}>
  <WidgetWrapper containerClass="max-w-7xl mx-auto">
    <Headline title="Custom Startup Insights" subtitle="Save or share a copy of these insights" />
