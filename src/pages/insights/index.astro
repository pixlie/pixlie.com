---
import Layout from '~/layouts/PageLayout.astro';
import Hero4 from '~/components/widgets/Hero4.astro';
import Features from '~/components/widgets/Features.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import InsightsResults from '~/solidComponents/insights/InsightsResults';
import Button from '~/components/ui/Button.astro';
import TextCycle from '~/solidComponents/ui/TextCycle';
import Subscribe from '~/solidComponents/widgets/Subscribe';

const metadata = {
  title: 'Subscribe to our newsletter',
  description: 'Explore Startup Insights Powered by Pixlie AI.',
};
---

<Layout metadata={metadata}>
  <Hero4
    actions={[
      {
        variant: 'primary',
        text: 'Get Notified',
        href: '#subscribe',
      },
      { text: 'Learn More', href: '#learn' },
    ]}
  >
    <Fragment slot="title">
      <span class="flex flex-1 justify-center"
        ><span class="text-center text-5xl md:text-8xl font-bold md:font-medium md:pb-3">Coming Soon:</span></span
      >
    </Fragment>

    <Fragment slot="title">
      <span class="text-5xl md:text-8xl font-bold md:font-medium">Insights with </span><a
        target="_blank"
        href="https://github.com/pixlie/PixlieAI"
        class="text-5xl md:text-8xl font-bold text-primary dark:text-white hover:text-secondary">Pixlie AI</a
      >
    </Fragment>

    <Fragment slot="subtitle">
      Soon, explore insights on our platform, starting with insights about startups and funding, and unlock custom
      insights on your device with full privacy.
    </Fragment>
  </Hero4>

  <WidgetWrapper containerClass="max-w-7xl mx-auto" id="learn">
    <Features
      title="How It Works"
      subtitle="Extracting semantically correct insights is a hard task, but Insights with Pixlie AI makes it easy."
      items={[
        {
          title: 'Real-World Semantics',
          description: 'Our insights are anchored in real-world data, covering founders, investors, valuations, etc.',
          icon: 'tabler:world',
        },
        {
          title: 'Web Crawl & Entity Extraction',
          description:
            'We crawl the web for news, blogs, articles, profiles, and more. Then, we extract relevant entities.',
          icon: 'tabler:database',
        },
        {
          title: 'Data Visualization',
          description: 'We unveil patterns and relationships in complex data at a glance.',
          icon: 'tabler:chart-pie',
        },
        {
          title: 'Full Privacy',
          description: 'Self-host to securely share private data, provide richer context, and unlock custom insights.',
          icon: 'tabler:shield',
        },
      ]}
    />
  </WidgetWrapper>

  <WidgetWrapper containerClass="max-w-7xl mx-5 md:mx-auto" id="subscribe">
    <Headline title="Want to know when we launch?" subtitle="Subscribe to get the latest updates." />
    <Subscribe client:idle />
  </WidgetWrapper>
</Layout>
