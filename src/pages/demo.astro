---
import Layout from '~/layouts/PageLayout.astro';
import Hero4 from '~/components/widgets/Hero4.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import InsightsResults from '~/solidComponents/insights/InsightsResults';
import Button from '~/components/ui/Button.astro';
import TextCycle from '~/solidComponents/ui/TextCycle';

const metadata = {
  title: 'Demo',
  description: 'Explore Startup Insights Powered by Pixlie AI.',
};
---

<Layout metadata={metadata}>
  <Hero4
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#start',
      },
    ]}
  >
    <Fragment slot="title">Startup Insights</Fragment>
    <Fragment slot="subtitle"
      >Powered by <a href="/ai" class="font-bold text-primary dark:text-white hover:text-secondary">Pixlie AI</a
      ></Fragment
    >
    <Fragment slot="animation"><TextCycle client:load /></Fragment>
  </Hero4>

  <WidgetWrapper containerClass="max-w-7xl mx-auto" id="start">
    <InsightsResults client:idle />
  </WidgetWrapper>

  <WidgetWrapper containerClass="max-w-7xl mx-auto">
    <Headline
      title="Custom Startup Insights"
      subtitle="We'll notify you when we're ready to generate insights for your startup"
    />
    <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 sm:gap-2">
      <input
        placeholder="Email"
        class="py-3 px-4 outline-none block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
      />
      <Button variant="primary">Send</Button>
    </div>
  </WidgetWrapper>
</Layout>
