---
import Layout from '~/layouts/PageLayout.astro';
import Hero4 from '~/components/widgets/Hero4.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import InsightsResults from '~/solidComponents/insights/InsightsResults';
import Button from '~/components/ui/Button.astro';
import TextCycle from '~/solidComponents/ui/TextCycle';
import Subscribe from '~/solidComponents/widgets/Subscribe';

const metadata = {
  title: 'Demo',
  description: 'Explore Startup Insights Powered by Pixlie AI.',
};
---

<Layout metadata={metadata}>
  <Hero4
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: 'https://github.com/pixlie/PixlieAI',
        target: '_blank',
        icon: 'tabler:brand-github',
      },
      { text: 'Subscribe', href: '#subscribe' },
    ]}
  >
    <Fragment slot="title">Startup Insights</Fragment>
    <Fragment slot="subtitle"
      >Powered by <a href="/ai" class="font-bold text-primary dark:text-white hover:text-secondary">Pixlie AI</a
      ></Fragment
    >
    <Fragment slot="animation"><TextCycle client:load /></Fragment>
  </Hero4>

  <!--<WidgetWrapper containerClass="max-w-7xl mx-auto" id="subscribe">
    <InsightsResults client:idle />
  </WidgetWrapper>-->

  <WidgetWrapper containerClass="max-w-7xl mx-auto pt-0 md:pt-0 lg:pt-0" id="subscribe">
    <Headline title="Want more AI powered insights?" subtitle="Subscribe to get updates on our latest releases." />
    <Subscribe client:idle />
  </WidgetWrapper>
</Layout>
