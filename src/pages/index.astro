  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get started',
        href: 'https://github.com/pixlie/PixlieAI',
        target: '_blank',
        icon: 'tabler:brand-github',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Unlock
      <span class="text-accent dark:text-white highlight"> Accurate AI Insights</span> that are Fast and Cost-Effective
    </Fragment>

    <Fragment slot="subtitle">
