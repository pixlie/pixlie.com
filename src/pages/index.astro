---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
// import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
// import Features2 from '~/components/widgets/Features2.astro';
// import Steps from '~/components/widgets/Steps.astro';
// import Content from '~/components/widgets/Content.astro';
// import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
// import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
import CallToAction2 from '~/components/widgets/CallToAction2.astro';

const metadata = {
  title: 'Pixlie: Semantic Search That Truly Understands Data',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: 'https://github.com/pixlie/PixlieAI',
        target: '_blank',
        icon: 'tabler:brand-github',
      },
      { text: 'Learn More', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">Semantic Search</span> That Truly Understands Data
    </Fragment>

    <Fragment slot="subtitle">
      Our open-source technology transforms data into knowledge graphs for superior search accuracy at lower costs. Maintain complete privacy while extracting valuable entities and relationships. Try it now with our no code web crawler.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="How Pixlie Works for You"
    subtitle="Turn any website or data source into structured, actionable intelligence - Pixlie autonomously creates detailed knowledge graphs from data for more accurate insights."
    items={[
      {
        title: 'Self-hosted and private',
        description: 'Pixlie is 100% open source and EU-based. Self-host it on your own infrastructure, maintaining complete data ownership and privacy compliance.',
        icon: 'tabler:shield',
      },
      {
        title: 'Add your data',
        description: 'Our powerful web crawler is the perfect starting point for ingesting public data. Additional file formats (CSV, JSON, Markdown) are coming soon to expand your knowledge graph with private data sources.',
        icon: 'tabler:database',
      },
      {
        title: 'Integrated web crawler',
        description: 'Autonomously explore and map the web to enhance your knowledge graph with relevant public information while maintaining complete privacy.',
        icon: 'tabler:spider',
      },
      {
        title: 'Share with your team',
        description: 'Collaborate securely with your team on a private server or cloud instance - all while keeping your data under your control.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Semantics management',
        description: 'Use our intuitive admin UI to manage real-world semantics extracted from your data, creating meaningful connections between concepts.',
        icon: 'tabler:world',
      },
      {
        title: 'Hosted and local AI models',
        description: "Choose your AI approach - integrate Anthropic's Claude using your API keys or use local models on your own infrastructure.",
        icon: 'tabler:robot',
      },
      {
        title: 'Entity and relationship extraction',
        description:
          "Our multi-agent system uses specialized models to classify text and extract entities cost-effectively, building a comprehensive knowledge graph.",
        icon: 'tabler:zoom-scan',
      },
      {
        title: 'Knowledge graph enrichment',
        description: 'As entities and relationships are extracted, your data is enriched by these new connections.',
        icon: 'tabler:zoom-in-area',
      },
      {
        title: 'No code graph queries',
        description:
          'Use the built-in admin UI to browse your entire knowledge graph. Make semantic queries without code.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'API access for your apps',
        description:
          'You can integrate with Pixlie using our upcoming API to power your apps and make semantic queries on your data.',
        icon: 'tabler:api',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction2
    actions={[
      {
        variant: 'primary',
        text: 'Contact',
        href: '/contact',
      },
      {
        variant: 'secondary',
        text: 'Get Pixlie',
        href: 'https://github.com/pixlie/PixlieAI',
        target: '_blank',
        icon: 'tabler:brand-github'
      },
    ]}
  >
    <Fragment slot="title"> Experience Pixlie in Action </Fragment>

    <Fragment slot="subtitle">
      Pixlie is open source and under active development. Get started with our community edition, or contact us for custom implementation services to integrate Pixlie's semantic intelligence into your products.
    </Fragment>
  </CallToAction2>
</Layout>
