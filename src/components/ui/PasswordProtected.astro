---

<style>
  /* Container style */
  #password-form {
    max-width: 300px;
    margin: 50px auto;
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  /* Password input style */
  #password-input {
    outline: none;
    flex: 1;
    padding: 10px;
    font-size: 1em;
    border: 1px solid #ddd;
    border-radius: 4px;
    transition: border-color 0.3s ease;
  }

  #password-input.invalid {
    border-color: red;
  }

  /* Show/Hide button style */
  #show-hide-button {
    font-size: 1em;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  #show-hide-button:hover {
  }

  /* Protected content style */
  #protected-content {
    font-size: 1.1em;
    color: #333;
    text-align: center;
    margin-top: 20px;
  }
</style>

<script client:load>
  document.addEventListener("DOMContentLoaded", () => {
    const passwordInput = document.getElementById("password-input");
    const showHideButton = document.getElementById("show-hide-button");
    const protectedContent = document.getElementById("protected-content");
    const passwordForm = document.getElementById("password-form");

    const correctPassword = "I am a cofounder."; // Duplicate here to ensure access in JavaScript

    // Toggle Show/Hide Password
    showHideButton.addEventListener("click", () => {
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        showHideButton.innerText = "ðŸ™ˆ";
      } else {
        passwordInput.type = "password";
        showHideButton.innerText = "ðŸ™‰";
      }
    });

    // Detect Enter key press
    passwordInput.addEventListener("keypress", (event) => {
      if (event.key === "Enter") {
        if (passwordInput.value === correctPassword) {
          passwordForm.style.display = "none";           // Hide password form
          protectedContent.style.display = "block";      // Show protected content
          passwordInput.classList.remove("invalid");
        } else {
          passwordInput.classList.add("invalid");       // Indicate incorrect password
        }
      } else {
        passwordInput.classList.remove("invalid");
      }
    });
  });
</script>

<!-- Password Form -->
<div id="password-form">
  <input 
    id="password-input"
    type="password"
    placeholder="Enter password" 
  />
  <button id="show-hide-button" type="button">ðŸ™‰</button>
</div>

<!-- Protected Content -->
<div id="protected-content" style="display: none;">
  <slot /> <!-- Protected content rendered here upon correct password -->
</div>